                                                <th>Unit Price</th>
                                                <th>Quantity</th>
                                                <th>Sub Total</th>
                                                <th></th>

                                            </tr>
                                        </thead>


                                        <tbody></tbody>
                                        <tfoot>
                                            <tr>
                                                <th colspan="4"></th>
                                                <th>Total:</th>
                                                <th></th>
                                            </tr>
                                        </tfoot>

                                    </table>

                                </div>
                            </div>
                        </div> <!-- end col -->
                    </div> <!-- end row -->

                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="mb-3">
                        <button class="btn btn-success w-md" type="button" onclick="$Load.SaveLoadInvoice();"> Save Invoice </button>
