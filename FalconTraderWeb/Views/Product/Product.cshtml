            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">Products</h4>
                    <div class="flex-shrink-0">
                        <ul class="nav nav-tabs-custom card-header-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-bs-toggle="tab" href="#buy-tab" role="tab">Product Entry</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#sell-tab" role="tab">Update Product</a>
                            </li>
                           
                        </ul>
                    </div>
                </div><!-- end card header -->
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane active" id="buy-tab" role="tabpanel">
                            <form id="Products">
                                <div>
                                    <div class="row">
                                        <div class="col-lg-4 col-md-6">
                                            <div class="mb-3">
                                                <label for="example-text-input" class="form-label">Product Code</label>
                                                <input class="form-control" type="text" placeholder="Enter Product Code" value="" id="ProductCode" name="ProductCode">
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-md-6">
                                            <div class="mb-3">
                                                <label for="example-text-input" class="form-label">Product Name</label>
                                                <input class="form-control" type="text" value="" placeholder="Enter Product Name" id="Itemdescp" name="Itemdescp">
                                            </div>
                                        </div>

                                        <div class="col-lg-4 col-md-6">
                                            <div class="mb-3">
                                                <label for="example-text-input" class="form-label">Product Price</label>
                                                <input class="form-control" type="number" value="" placeholder="Enter Price" id="UnitPrice" name="UnitPrice">
                                            </div>
                                        </div>

                                        <div class="col-lg-4 col-md-6">
                                            <div class="mb-3">
                                                <label for="example-text-input" class="form-label">Margin</label>
                                                <input class="form-control" type="number" value="" placeholder="Enter Price" id="Margin" name="Margin">
                                            </div>
                                        </div>

                                    </div>
                                </div>

                                <div>
                                    <div class="row">
                                       
                                        <div class="col-lg-4 col-md-6">
                                            <div class="text-right">
                                                <button type="button" class="btn btn-success w-md" onclick="$Product.SaveProduct();">Save Product Info</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>

                        </div>

                        <!-- end tab pane -->
                        <div class="tab-pane" id="sell-tab" role="tabpanel">

                            <div class="row">
                                <div class="col-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h4 class="card-title">Products</h4>

                                        </div>
                                        <div class="card-body">

                                            <table id="Producttbl" class="table">
                                                <thead>
                                                    <tr>
                                                        <th>Product Id</th>
                                                        <th>Product Code</th>
                                                        <th>Product Descp</th>
                                                        <th>Unit Price</th>
                                                        <th>Margin %</th>
                                                        <th>Model</th>
                                                    </tr>
                                                </thead>


                                                <tbody>
